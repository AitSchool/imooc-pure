/* pages/book/book.wxss */
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 100%;
}

.sub-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	/* z-index:0;  */
	margin-top: 100rpx;
	background-color: #f5f5f5;
}

.books-container {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	flex-wrap: wrap;
	margin-top: 10rpx;
	padding: 0 90rpx;
}

.books-container book-cmp {
	margin-bottom: 30rpx;
}

.box {
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	border-radius: 100rpx;
	height: 68rpx;
	width: 700rpx;
	color: #999;
	background-color: #f5f5f5;
}

.box image {
	margin-right: 20rpx;
	margin-bottom: -4rpx;
	width: 28rpx;
	height: 28rpx;
}

.header {
  display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	z-index: 99;
	position: fixed;
	box-shadow: 0 0 6rpx 0 #e3e3e3;
	border-top: 2rpx solid #f5f5f5;
	border-bottom: 2rpx solid #f5f5f5;
	width: 100%;
	height: 100rpx;
	background-color: #fff;
}

.head-img {
	margin-top: 40rpx;
	width: 106rpx;
	height: 34rpx;
}
