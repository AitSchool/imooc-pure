.container {
	display: inline-flex;
  flex-direction: row;
  /* 根据最高元素 08 设置 */
	height: 60rpx;
}

.index-container {
	display: flex;
  flex-direction: row;
  /* No 08 | 基于底部对齐 */
	align-items: baseline;
}

.plain {
	font-size: 32rpx;
}

.index {
  margin-right: 14rpx;
  /* 取消字体上下间距 */
	line-height: 60rpx;
  font-size: 60rpx;
  /* 取消字体上下间距 */
	font-weight: 800;
}

.vertical-line {
	margin-right: 14rpx;
	border-left: 1rpx solid black;
	height: 44rpx;
}

.date-container {
	display: flex;
	flex-direction: column;
	margin-top: 5rpx;
}

.month {
  /* 取消字体上下间距 */
	line-height: 24rpx;
  font-size: 24rpx;
  /* 取消字体上下间距 */
}

.year {
	font-size: 20rpx;
}
